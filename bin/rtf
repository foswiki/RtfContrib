use strict;
use warnings;

BEGIN {
    # Set default current working directory (needed for mod_perl)
    if( $ENV{"SCRIPT_FILENAME"} && $ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
    }
    # Set library paths in @INC, at compile time
    unshift @INC, '.';
    require 'setlib.cfg';
}

use Foswiki::UI;
use Foswiki::Contrib::RtfContrib;
Foswiki::UI::run( \&Foswiki::Contrib::RtfContrib::export, rtf => 1 );
